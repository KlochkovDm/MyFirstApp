<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
          android:id="@+id/textViewTest"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Hello World!"
          android:textSize="20sp"
          android:textColor="@color/black"
          android:textAlignment="center"
          android:fontFamily="cursive" />

    <EditText
        android:id="@+id/editTextTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5162"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/buttonTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3245"
        android:textColor="@color/black"
        android:text="Button"
        android:fontFamily="@font/custom_font"/>

    <Switch
        android:id="@+id/switchTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch"/>

    <CheckBox
        android:id="@+id/checkBoxTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CheckBox"
        android:textStyle="bold"/>

    <ToggleButton
        android:layout_gravity="center"
        android:id="@+id/toggleButtonTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textOff="Custom OFF"
        android:textOn="Ð¡ustom On" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cornerRadius="100dp"
        android:text="BUTTON"
        android:layout_gravity="center"/>




</LinearLayout>